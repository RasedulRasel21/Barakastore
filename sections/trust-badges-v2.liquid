<section class="trust-badges-section">
  <div class="money-back-guarantee">
    <div class="guarantee-content">
      <div class="guarantee-badge">
        {% if section.settings.badge_image != blank %}
          <img src="{{ section.settings.badge_image | img_url: 'master' }}" alt="90 Day Money-Back Guarantee" class="badge-image">
        {% else %}
          <svg class="badge-circle" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <circle cx="100" cy="100" r="95" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="100" cy="100" r="85" fill="none" stroke="currentColor" stroke-width="2"/>
            <path d="M 50,30 Q 50,20 60,20 L 140,20 Q 150,20 150,30 L 150,50 Q 100,70 50,50 Z" fill="none" stroke="currentColor" stroke-width="1.5"/>
            <text x="100" y="95" text-anchor="middle" font-size="48" font-weight="bold" fill="currentColor">90</text>
            <text x="100" y="125" text-anchor="middle" font-size="32" fill="currentColor">Day</text>
            <text x="100" y="40" text-anchor="middle" font-size="10" fill="currentColor" transform="rotate(-15 100 40)">MONEY-BACK GUARANTEE</text>
            <text x="100" y="175" text-anchor="middle" font-size="10" fill="currentColor" transform="rotate(15 100 175)">MONEY-BACK GUARANTEE</text>
          </svg>
        {% endif %}
      </div>
      
      <div class="guarantee-text">
        <h2 class="guarantee-title">{{ section.settings.guarantee_title }}</h2>
        <p class="guarantee-description">
          {{ section.settings.guarantee_description }}
        </p>
      </div>
      
      {% if section.settings.learn_more_url != blank %}
        <a href="{{ section.settings.learn_more_url }}" class="learn-more-link">
          {{ section.settings.learn_more_text }}
        </a>
      {% endif %}
    </div>
  </div>
  
  <div class="trust-features">
    
    <div class="trust-feature-v2">
    <div class="trust-feature">
      <div class="feature-icon">
        {% if section.settings.icon_shipping != blank %}
          <img src="{{ section.settings.icon_shipping | img_url: 'master' }}" alt="Free & Fast Shipping" class="feature-icon-image">
        {% else %}
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="8" y="16" width="24" height="20" rx="2" stroke="currentColor" stroke-width="2"/>
            <path d="M12 16V12C12 10 14 8 16 8H36C38 8 40 10 40 12V28C40 30 38 32 36 32H32" stroke="currentColor" stroke-width="2"/>
            <circle cx="20" cy="26" r="3" stroke="currentColor" stroke-width="2"/>
            <path d="M32 22L36 26L32 30" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        {% endif %}
      </div>
      <div class="feature-text">
        <h3 class="feature-title">{{ section.settings.shipping_title }}</h3>
        <p class="feature-subtitle">{{ section.settings.shipping_subtitle }}</p>
      </div>
    </div>
    
    <div class="trust-feature">
      <div class="feature-icon">
        {% if section.settings.icon_doctor != blank %}
          <img src="{{ section.settings.icon_doctor | img_url: 'master' }}" alt="Doctor Endorsed Solutions" class="feature-icon-image">
        {% else %}
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M24 8L26 14L24 20L22 14L24 8Z" stroke="currentColor" stroke-width="2"/>
            <circle cx="24" cy="28" r="8" stroke="currentColor" stroke-width="2"/>
            <path d="M24 24V28M24 28L27 31" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M16 28C16 28 14 32 14 36C14 38 16 40 18 40" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M32 28C32 28 34 32 34 36C34 38 32 40 30 40" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        {% endif %}
      </div>
      <div class="feature-text">
        <h3 class="feature-title">{{ section.settings.doctor_title }}</h3>
        <p class="feature-subtitle">{{ section.settings.doctor_subtitle }}</p>
      </div>
    </div>
    
    <div class="trust-feature">
      <div class="feature-icon">
        {% if section.settings.icon_satisfaction != blank %}
          <img src="{{ section.settings.icon_satisfaction | img_url: 'master' }}" alt="Satisfaction Guaranteed" class="feature-icon-image">
        {% else %}
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M24 8C24 8 16 12 16 16V24C16 32 24 40 24 40C24 40 32 32 32 24V16C32 12 24 8 24 8Z" stroke="currentColor" stroke-width="2"/>
            <path d="M20 24L22 26L28 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {% endif %}
      </div>
      <div class="feature-text">
        <h3 class="feature-title">{{ section.settings.satisfaction_title }}</h3>
        <p class="feature-subtitle">{{ section.settings.satisfaction_subtitle }}</p>
      </div>
    </div>
    
    <div class="trust-feature">
      <div class="feature-icon">
        {% if section.settings.icon_science != blank %}
          <img src="{{ section.settings.icon_science | img_url: 'master' }}" alt="Proven Results, Backed By Science" class="feature-icon-image">
        {% else %}
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="24" cy="24" r="16" stroke="currentColor" stroke-width="2"/>
            <circle cx="24" cy="24" r="4" fill="currentColor"/>
            <circle cx="24" cy="12" r="2" fill="currentColor"/>
            <circle cx="32" cy="16" r="2" fill="currentColor"/>
            <circle cx="36" cy="24" r="2" fill="currentColor"/>
            <circle cx="32" cy="32" r="2" fill="currentColor"/>
            <circle cx="24" cy="36" r="2" fill="currentColor"/>
            <circle cx="16" cy="32" r="2" fill="currentColor"/>
            <circle cx="12" cy="24" r="2" fill="currentColor"/>
            <circle cx="16" cy="16" r="2" fill="currentColor"/>
          </svg>
        {% endif %}
      </div>
      <div class="feature-text">
        <h3 class="feature-title">{{ section.settings.science_title }}</h3>
        <p class="feature-subtitle">{{ section.settings.science_subtitle }}</p>
      </div>
    </div>
    </div>
  </div>
</section>

<style>
  .trust-badges-section {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .money-back-guarantee {
    background: linear-gradient(115deg, #c740a3, #9140c7);
    padding: 1rem 2rem;
  }

  .guarantee-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .guarantee-badge {
    flex-shrink: 0;
  }

  .badge-circle {
    width: 180px;
    height: 180px;
    color: #FFFFFF;
  }

  .badge-image {
    width: 180px;
    height: 180px;
    object-fit: contain;
    position: relative;
    top: -50px;
  }

  .guarantee-text {
    flex: 1;
    min-width: 300px;
    color: #FFFFFF;
  }

  .guarantee-title {
    font-size: 2rem;
    font-weight: bold;
    margin: 0 0 0.5rem 0;
  }

  .guarantee-description {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0;
    opacity: 0.95;
  }

  .learn-more-link {
    color: #FFFFFF;
    text-decoration: underline;
    font-weight: 600;
    font-size: 1.125rem;
    white-space: nowrap;
  }
   .trust-features {
    background: #eff5f5;
  }

  .trust-feature-v2 {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 3rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    background: #eff5f5;
  }

  .trust-feature {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .feature-icon {
    flex-shrink: 0;
    color: #333;
  }

  .feature-icon-image {
    width: 48px;
    height: 48px;
    object-fit: contain;
  }

  .feature-text {
    display: flex;
    flex-direction: column;
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  .feature-subtitle {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  @media (max-width: 768px) {
    .guarantee-content {
      flex-direction: column;
      text-align: center;
    }

    .guarantee-title {
      font-size: 1.5rem;
    }
    .badge-image {
    top: 0;
  }
  .trust-feature {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-direction: column;
}
    .trust-features {
      grid-template-columns: 2fr;
    }
  .trust-feature-v2 {
    grid-template-columns: repeat(auto-fit, minmax(140px, 2fr));
    gap: 1rem;
    padding: 2rem 1rem;
  }
    .trust-feature {
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Trust Badges v2",
  "settings": [
    {
      "type": "header",
      "content": "Guarantee Section"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "90-Day Badge Image",
      "info": "Upload your custom 90-day money-back guarantee badge. Recommended size: 400x400px"
    },
    {
      "type": "text",
      "id": "guarantee_title",
      "label": "Guarantee Title",
      "default": "90-Day Money-Back Guarantee"
    },
    {
      "type": "textarea",
      "id": "guarantee_description",
      "label": "Guarantee Description",
      "default": "We're confident you'll love your results. If not, contact our team during your risk-free trial and we'll handle the rest!"
    },
    {
      "type": "text",
      "id": "learn_more_text",
      "label": "Learn More Button Text",
      "default": "Learn More"
    },
    {
      "type": "text",
      "id": "learn_more_url",
      "label": "Learn More URL",
      "default": "#"
    },
    {
      "type": "header",
      "content": "Feature 1 - Shipping"
    },
    {
      "type": "image_picker",
      "id": "icon_shipping",
      "label": "Shipping Icon",
      "info": "Recommended size: 96x96px"
    },
    {
      "type": "text",
      "id": "shipping_title",
      "label": "Shipping Title",
      "default": "Free & Fast"
    },
    {
      "type": "text",
      "id": "shipping_subtitle",
      "label": "Shipping Subtitle",
      "default": "Shipping"
    },
    {
      "type": "header",
      "content": "Feature 2 - Doctor Endorsed"
    },
    {
      "type": "image_picker",
      "id": "icon_doctor",
      "label": "Doctor Icon",
      "info": "Recommended size: 96x96px"
    },
    {
      "type": "text",
      "id": "doctor_title",
      "label": "Doctor Title",
      "default": "Doctor Endorsed"
    },
    {
      "type": "text",
      "id": "doctor_subtitle",
      "label": "Doctor Subtitle",
      "default": "Solutions"
    },
    {
      "type": "header",
      "content": "Feature 3 - Satisfaction"
    },
    {
      "type": "image_picker",
      "id": "icon_satisfaction",
      "label": "Satisfaction Icon",
      "info": "Recommended size: 96x96px"
    },
    {
      "type": "text",
      "id": "satisfaction_title",
      "label": "Satisfaction Title",
      "default": "Satisfaction"
    },
    {
      "type": "text",
      "id": "satisfaction_subtitle",
      "label": "Satisfaction Subtitle",
      "default": "Guaranteed"
    },
    {
      "type": "header",
      "content": "Feature 4 - Science"
    },
    {
      "type": "image_picker",
      "id": "icon_science",
      "label": "Science Icon",
      "info": "Recommended size: 96x96px"
    },
    {
      "type": "text",
      "id": "science_title",
      "label": "Science Title",
      "default": "Proven Results,"
    },
    {
      "type": "text",
      "id": "science_subtitle",
      "label": "Science Subtitle",
      "default": "Backed By Science"
    }
  ],
  "presets": [
    {
      "name": "Trust Badges v2"
    }
  ]
}
{% endschema %}