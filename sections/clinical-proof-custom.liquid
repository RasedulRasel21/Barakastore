<!-- sections/clinical-proof.liquid -->

<!-- HTML Structure -->
<section class="clinical-proof-section">
  <div class="container">
    <div class="clinical-grid">
      <div class="clinical-image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: '600x' }}" alt="{{ section.settings.heading }}">
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      <div class="clinical-content">
        <h2 class="clinical-heading">{{ section.settings.heading }}</h2>
        
        {% for block in section.blocks %}
          <div class="clinical-text" {{ block.shopify_attributes }}>
            <p>{{ block.settings.paragraph }}</p>
          </div>
        {% endfor %}
        
        {% if section.settings.show_link and section.settings.link_url != blank %}
          <a href="{{ section.settings.link_url }}" target="_blank" class="clinical-link">
            {{ section.settings.link_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<!-- CSS Styles -->
<style>
  .clinical-proof-section {
    background: {{ section.settings.background_color }};
    padding: 80px 20px;
  }

  .clinical-proof-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .clinical-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .clinical-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .placeholder-image {
    width: 100%;
    aspect-ratio: 16/9;
    background: #f0f0f0;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .clinical-heading {
    font-size: 32px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 25px;
    line-height: 1.3;
  }

  .clinical-text {
    margin-bottom: 20px;
  }

  .clinical-text p {
    font-size: 16px;
    line-height: 1.7;
    color: #333;
    margin: 0;
  }

  .clinical-link {
    display: inline-block;
    color: #2d9ca5;
    font-size: 14px;
    text-decoration: underline;
    margin-top: 20px;
    transition: color 0.3s ease;
  }

  .clinical-link:hover {
    color: #236871;
  }

  @media (max-width: 968px) {
    .clinical-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  .clinical-proof-section {
    padding: 40px 20px;
  }
    .clinical-heading {
      font-size: 26px;
    }
  }
</style>

<!-- Schema -->
{% schema %}
{
  "name": "Clinical Proof",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Clinical Proof"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#2d9ca5"
    },
    {
      "type": "checkbox",
      "id": "show_link",
      "label": "Show Research Link",
      "default": true
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "https://pubmed.ncbi.nlm.nih.gov/34880892/"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph Text",
          "default": "Your paragraph text here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Clinical Proof",
      "blocks": [
        {
          "type": "paragraph",
          "settings": {
            "paragraph": "Clinical evidence supports the use of knee massagers for temporary pain relief and improved joint mobility. Massagers that combine heat, vibration, and massage therapy are shown to be effective in reducing symptoms of knee osteoarthritis by enhancing circulation and relieving pain."
          }
        },
        {
          "type": "paragraph",
          "settings": {
            "paragraph": "This comprehensive approach aids in managing knee pain effectively, leading to improved quality of life and well-being. Such devices offer a non-invasive alternative to manage knee pain without the need for continuous medication or surgical interventions."
          }
        }
      ]
    }
  ]
}
{% endschema %}