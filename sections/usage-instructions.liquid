<!-- sections/usage-instructions.liquid -->

<!-- HTML Structure -->
<section class="usage-instructions-section">
  <div class="container">
    <h2 class="usage-heading">{{ section.settings.heading }}</h2>
    
    <div class="usage-grid">
      {% for block in section.blocks %}
        <div class="usage-step" {{ block.shopify_attributes }}>
          <div class="step-number">{{ forloop.index }}</div>
          <div class="step-image">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '400x' }}" alt="{{ block.settings.title }}">
            {% else %}
              <div class="placeholder-image">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="step-info">
            <h3 class="step-title">{{ block.settings.title }}</h3>
            <p class="step-description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- CSS Styles -->
<style>
  .usage-instructions-section {
    background: {{ section.settings.background_color }};
    padding: 80px 20px;
  }

  .usage-instructions-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .usage-heading {
    font-size: 32px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 50px;
    text-align: center;
  }

  .usage-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
  }

  .usage-step {
    position: relative;
    text-align: center;
  }

  .step-number {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 50px;
    background: {{ section.settings.accent_color }};
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: 700;
    z-index: 2;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  }

  .step-image {
    margin-bottom: 20px;
    border-radius: 12px;
    overflow: hidden;
    border: 3px solid #e0e0e0;
  }

  .step-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .placeholder-image {
    width: 100%;
    aspect-ratio: 4/3;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .step-title {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 10px;
  }

  .step-description {
    font-size: 14px;
    line-height: 1.6;
    color: #555;
  }

  @media (max-width: 768px) {
    .usage-heading {
      font-size: 26px;
    }

    .usage-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<!-- Schema -->
{% schema %}
{
  "name": "Usage Instructions",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How to Use the Knee Relief Massager"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Step Number Color",
      "default": "#2d9ca5"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Usage Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Step Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Step 1"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Step Description",
          "default": "Description of this step."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Usage Instructions",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "title": "Step 1",
            "description": "Place the massager around your knee and secure it."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Step 2",
            "description": "Adjust the settings for a comfortable yet effective treatment to stabilize your knee."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Step 3",
            "description": "Go about your day, enjoying pain-free movement."
          }
        },
        {
          "type": "step",
          "settings": {
            "title": "Step 4",
            "description": "Use it during any activity, from walking to resting, ensuring continuous knee support."
          }
        }
      ]
    }
  ]
}
{% endschema %}