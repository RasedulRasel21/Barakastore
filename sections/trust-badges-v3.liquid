{% comment %}
  Trust Badges Section
  Add this to your Shopify theme sections folder
{% endcomment %}

<style>
  .barakashop-trust-badges-section {
    padding: 60px 20px;
    background-color: {{ section.settings.background_color }};
  }
  
  .barakashop-trust-badges-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    align-items: start;
  }
  
  .barakashop-trust-badge-item {
    text-align: center;
    padding: 20px;
  }
  
  .barakashop-trust-badge-icon-wrapper {
    width: 150px;
    height: 150px;
    margin: 0 auto 20px;
  }
  
  .barakashop-trust-badge-icon-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  .barakashop-trust-badge-heading {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 15px;
    color: {{ section.settings.heading_color }};
  }
  
  .barakashop-trust-badge-description {
    font-size: 16px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .barakashop-trust-badges-container {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }
</style>

<div class="barakashop-trust-badges-section">
  <div class="barakashop-trust-badges-container">
    {% for block in section.blocks %}
      <div class="barakashop-trust-badge-item" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          <div class="barakashop-trust-badge-icon-wrapper">
            <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.heading }}" loading="lazy">
          </div>
        {% endif %}
        
        {% if block.settings.heading != blank %}
          <h3 class="barakashop-trust-badge-heading">{{ block.settings.heading }}</h3>
        {% endif %}
        
        {% if block.settings.text != blank %}
          <p class="barakashop-trust-badge-description">{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Trust Badges v3",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Badge Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Trust Badge"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Add your description here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges v3",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "heading": "90-Day Money Back Guarantee",
            "text": "If you're not absolutely thrilled with the results, we don't want your money. No hassles, no questions asked."
          }
        },
        {
          "type": "badge",
          "settings": {
            "heading": "Fast & Free Shipping",
            "text": "We offer fast and free 4-8 day delivery on all orders to the UK."
          }
        },
        {
          "type": "badge",
          "settings": {
            "heading": "Guaranteed High quality",
            "text": "All BarakaShop products are made of high quality materials. Enjoy consistent, trouble-free performance for a long time."
          }
        }
      ]
    }
  ]
}
{% endschema %}